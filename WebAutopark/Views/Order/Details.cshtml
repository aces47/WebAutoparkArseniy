@model DAL.Entities.Order
@using DAL.Entities

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.ModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.StateNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.StateNumber)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.OrderElements)
        </dt>
        @foreach (var item in Model.OrderElements)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(t=>item.Part.Name) @Html.DisplayFor(t=>item.DetailCount)pcs.
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Add detail", "Create", "OrderElement", Model, new { @class = "btn btn-link" }) |
    <a class="btn btn-link" asp-action="Index">Back to List</a>
</div>
